<h1>Update User</h1>

<%= form_with model: @user, url: users_edit_path, data: { turbo: false } do |form|  %>

    <% if form.object.errors.any? %> <!-- get from @user and return the form.object -->
        <div class="alert alert-danger">
            <% form.object.errors.full_messages.each do |message| %>
                <div> <%= message %> </div>
            <% end %>
        </div>
    <% end %>

    <div class="mb-3">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="mb-3">
        <%= form.label :email %>
        <%= form.text_field :email, disabled: true, class: "form-control", placeholder: "steve@apple.com" %>
    </div>

    <%= form.hidden_field :id %>


    <div class="mb-3">
        <%= form.submit "Update user", class: "btn btn-primary" %>
    </div>

<% end %> 