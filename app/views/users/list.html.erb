<h1>User List</h1>

<table class="table">
<thead>
    <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Actions</th>
    </tr>
</thead>
<tbody>

    <% @UserList.each do |item| %>
        <tr> 
            <td> <%= item.name %> </td>
            <td> <%= item.email %> </td>
            <td>
                <!--button type="button" class="btn btn-primary">Edit</button>-->
                <%= button_to "Delete", {:controller => :users, :action => 'destroy', :id => item.id }, :method => :delete, form: {data: {turbo_confirm: 'Are you sure you want to delete?'}}, class: "btn btn-danger" %>
            </td>

        </tr>
    <% end %>

</tbody>
</table>


